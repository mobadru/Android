<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:id="@+id/tvDashboardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Grid of cards -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="3"
            app:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Card 1: Manage Tenants -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardManageTenants"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#2196F3"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_tenant"
                        android:tint="#FFFFFF"
                        android:contentDescription="Manage Tenants Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage User"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: View Lease Agreements -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewLeaseAgreements"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#2196F3"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_booking"
                        android:tint="#FFFFFF"
                        android:contentDescription="Lease Agreements Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Lease Agreements"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: View Payments -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPayments"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#2196F3"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_payment"
                        android:tint="#FFFFFF"
                        android:contentDescription="Payments Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Payments"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4: Manage Rooms -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardManageRooms"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#2196F3"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_property"
                        android:tint="#FFFFFF"
                        android:contentDescription="Manage Rooms Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Rooms"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 5: Manage Maintenance -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardManageMaintenance"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#2196F3"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_report"
                        android:tint="#FFFFFF"
                        android:contentDescription="Manage Maintenance Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Maintenance"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 6: Manage Messages -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardManageMessages"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#2196F3"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_notification"
                        android:tint="#FFFFFF"
                        android:contentDescription="Manage Messages Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Messages"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.gridlayout.widget.GridLayout>
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336" />

    </LinearLayout>
</ScrollView>
