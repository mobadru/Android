<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Payment ID -->
        <TextView
            android:id="@+id/tvPaymentId"
            android:text="Payment ID: #1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2196F3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Tenant/User Name -->
        <TextView
            android:id="@+id/tvPaymentUser"
            android:text="User: Mohamed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />

        <!-- Payment Amount -->
        <TextView
            android:id="@+id/tvPaymentAmount"
            android:text="Amount: TZS 300000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp" />

        <!-- Payment Date -->
        <TextView
            android:id="@+id/tvPaymentDate"
            android:text="Date: 2025-06-26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnUpdatePayment"
                android:text="Update"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#2196F3"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnDeletePayment"
                android:text="Delete"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F44336"
                android:textColor="#fff"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
